<form method="post" action="/post/add">
  <lable>Poster</label>

  <select name="post[author_id]">
    <% @authors.each do |author| %>
    <option value="<%= author.id %>"><%= author.name %></option>
    <% end%>
  </select>
  <br>
  <label>Tags:</label>
  <% Tag.all.each do |tag| %>
  <input type="checkbox" name="post[tag_ids][]" value="<%=tag.id %>"><%=tag.name %> </input> 
  <% end %>
  <br>
  <label>Title of Post</title>
    <input type="text" name="post[title]" ></input><br>
  <label>Content</label>
  <textarea name="post[content]"></textarea>
  <br>
  <button>Submit</button>
</form>